<div class="landing-section">
	<!-- 主標題 (左側) -->
	<div class="title-wrapper">
		<img src="/2026/img/Visual/jam-the-chaos-title.svg" class="main-title" alt="JAM THE CHAOS" />
	</div>

	<!-- 裝飾元素 -->
	<!-- 右上角金屬球 -->
	<img src="/2026/img/Visual/round-metal.svg" class="object metal-sphere floating" alt="Metal Sphere" />

	<!-- 中央偏左 菱形/星星 -->
	<img src="/2026/img/Visual/star-metal.png" class="object metal-star-1 floating-reverse" alt="Metal Star" />

	<!-- 左下 菱形/星星 -->
	<img src="/2026/img/Visual/star-metal.png" class="object metal-star-2 floating" alt="Metal Star" />

	<!-- 中央下方 吉祥物 -->
	<img src="/2026/img/Visual/stone-metal.svg" class="object stone-metal floating" alt="Stone Mascot" />

	<!-- 右下角資訊 -->
	<div class="info-wrapper">
		<div class="location">
			<p>中央研究院</p>
			<p>人文社會科學館</p>
		</div>
		<div class="date">2026/03/28</div>
	</div>

	<!-- 左下角報名按鈕預留 -->
	<div class="cta-wrapper">
		<a href="#" class="cta-button">
			<div class="cta-icon">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M9 18V5l12-2v13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
					<circle cx="6" cy="18" r="3" stroke="currentColor" stroke-width="2"></circle>
					<circle cx="18" cy="16" r="3" stroke="currentColor" stroke-width="2"></circle>
				</svg>
			</div>
			<div class="cta-content">
				<span class="cta-text">我要報名</span>
				<span class="arrow">›</span>
			</div>
		</a>
	</div>
</div>

<style>
	.landing-section {
		position: relative;
		width: 100%;
		height: 100dvh;
		overflow: hidden;
		font-family: "GenKiMinTW", serif;
		z-index: 1;
		animation: fadeIn 2s ease-out forwards;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	.object {
		position: absolute;
		z-index: 1;
		pointer-events: none;
	}

	/* 主標題 */
	.title-wrapper {
		position: absolute;
		top: 15%;
		left: 8%;
		z-index: 2;
		width: 35%;
		max-width: 450px;
	}
	.main-title {
		width: 100%;
		height: auto;
		filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.2));
	}

	/* 右下角資訊 */
	.info-wrapper {
		position: absolute;
		bottom: 8%;
		right: 8%;
		z-index: 2;
		text-align: right;
		color: white;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
	}
	.location p {
		font-size: 2.5rem;
		margin: 0;
		line-height: 1.4;
		letter-spacing: 0.5em;
		margin-right: -0.5em;
		font-weight: 400;
	}
	.date {
		font-size: 1.8rem;
		margin-top: 0.5rem;
		letter-spacing: 0.4em;
		margin-right: -0.4em;
		font-weight: 400;
	}

	/* 左下角按鈕 */
	.cta-wrapper {
		position: absolute;
		bottom: 8%;
		left: 8%;
		z-index: 2;
	}
	.cta-button {
		display: flex;
		align-items: center;
		gap: 1.2rem;
		padding: 0.8rem 1.8rem 0.8rem 0.8rem;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(12px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 1.2rem;
		color: white;
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}
	.cta-button:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}
	.cta-icon {
		width: 48px;
		height: 48px;
		background: rgba(255, 255, 255, 0.15);
		border-radius: 0.8rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.cta-content {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.cta-text {
		font-size: 1.25rem;
		letter-spacing: 0.1em;
		font-weight: 500;
	}
	.arrow {
		font-size: 1.5rem;
		line-height: 1;
		transition: transform 0.3s ease;
	}
	.cta-button:hover .arrow {
		transform: translateX(4px);
	}

	/* 位置設定 */
	.metal-sphere {
		top: 10%;
		right: 15%;
		width: 180px;
		opacity: 0.9;
	}

	.metal-star-1 {
		top: 20%;
		left: 50%;
		width: 40px;
		opacity: 0.8;
	}

	.metal-star-2 {
		bottom: 35%;
		left: 15%;
		width: 50px;
		opacity: 0.8;
	}

	.stone-metal {
		top: 55%;
		left: calc(50% - 75px);
		width: 150px;
		opacity: 0.9;
	}

	/* 動畫 */
	@keyframes float {
		0% {
			transform: translateY(0px) rotate(0deg);
		}
		50% {
			transform: translateY(-15px) rotate(2deg);
		}
		100% {
			transform: translateY(0px) rotate(0deg);
		}
	}

	@keyframes float-reverse {
		0% {
			transform: translateY(0px) rotate(0deg);
		}
		50% {
			transform: translateY(15px) rotate(-2deg);
		}
		100% {
			transform: translateY(0px) rotate(0deg);
		}
	}

	.floating {
		animation: float 6s ease-in-out infinite;
	}

	.floating-reverse {
		animation: float-reverse 7s ease-in-out infinite;
	}

	/* 響應式調整 */
	@media (max-width: 1024px) {
		.location p {
			font-size: 1.8rem;
		}
		.date {
			font-size: 1.4rem;
		}
		.metal-sphere {
			width: 140px;
		}
	}
	@media (max-width: 768px) {
		.title-wrapper {
			width: 70%;
			top: 12%;
			left: 5%;
		}
		.info-wrapper {
			bottom: 5%;
			right: 5%;
		}
		.location p {
			font-size: 1.2rem;
		}
		.date {
			font-size: 1rem;
		}
		.cta-wrapper {
			bottom: 5%;
			left: 5%;
		}
		.cta-button {
			padding: 0.4rem 1.2rem 0.4rem 0.4rem;
			gap: 0.8rem;
		}
		.cta-icon {
			width: 36px;
			height: 36px;
		}
		.cta-text {
			font-size: 1rem;
		}
		.metal-sphere {
			width: 100px;
			top: 15%;
		}
		.stone-metal {
			width: 100px;
			left: calc(50% - 50px);
		}
	}
</style>
