---
import { useTranslations, type Lang } from "@/utils/i18n";
const isProd = import.meta.env.PROD;

interface Props {
	lang?: Lang;
}

const lang = Astro.props.lang ?? "zh";
const t = useTranslations(lang).demoShow;
const prefix = lang === "en" ? "/2026/en" : "/2026";
---

<section class="hero-section">
	<img src="/2026/img/demo-1.webp" class="shape-a" data-index="0" alt="" />
	<img src="/2026/img/demo-2.webp" class="shape-b" data-index="1" alt="" />
	<img src="/2026/img/demo-3.webp" class="shape-c" data-index="2" alt="" />
	<img src="/2026/img/demo-4.webp" class="shape-d" data-index="3" alt="" />

	<div class="overlay"></div>

	<div class="title-group">
		<h2>
			<div class="text-reveal-title">{t.subtitle}</div>
			<div class="text-reveal-title large">{t.title}</div>
		</h2>
		{
			!isProd && (
				<div class="cta-btn">
					<a href={`${prefix}/agenda`} class="btn">
						{t.cta}
					</a>
				</div>
			)
		}
		<p class="text-reveal-paragraph" set:html={t.description} />
	</div>
</section>

<style>
	.hero-section {
		position: relative;
		overflow: hidden;
		color: white;
		font-weight: 500;
	}

	img {
		position: absolute;
		top: 0;
		width: 30vw;
		height: 100%;
		object-fit: cover;
		filter: brightness(0.4);
		transition: all 0.6s ease-in-out;
	}

	img:hover {
		filter: brightness(0.8);
		transform: scale(1.1);
	}

	.shape-a {
		left: 0;
		clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
	}
	.shape-b {
		left: 25vw;
		clip-path: polygon(12% 0, 100% 0, 100% 100%, 0 100%);
	}
	.shape-c {
		left: 50vw;
		clip-path: polygon(7% 0, 100% 0, 100% 100%, 0 100%);
	}
	.shape-d {
		left: 75vw;
		clip-path: polygon(16.67% 0, 100% 0, 100% 100%, 0 100%);
	}

	.overlay {
		position: absolute;
		background: linear-gradient(180deg, #00000000, #00000099 100%);
		z-index: 2;
		width: 100%;
		height: 40%;
		left: 0;
		bottom: 0;
		pointer-events: none;
	}

	.title-group {
		text-align: right;
		max-width: var(--content-max-width);
		margin: 5rem auto 0;
		padding: 2rem;
	}

	h2 {
		line-height: 1.5;
		margin-bottom: min(20rem, 30vh);
	}

	.large {
		font-size: 5rem;
		font-weight: bold;
	}

	p {
		text-align: right;
		line-height: 1.5;
		max-width: 40rem;
		margin-left: auto;
		position: relative;
		z-index: 3;
		color: #e7e7e7;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		background-color: #ffd172;
		color: #634a15;
		text-decoration: none;
		font-weight: bold;
		width: 11rem;
		height: 3rem;
		border-radius: 3.125rem;
		font-size: 1.1rem;
		transition: transform 0.2s;
		margin-top: 1rem;
		cursor: pointer;
	}

	.btn:hover {
		transform: scale(1.05);
	}

	@media screen and (max-width: 50rem) {
		.shape-c,
		.shape-d {
			display: none;
		}

		img {
			width: 60vw;
		}

		.shape-b {
			left: 40vw;
		}

		.large {
			font-size: 3rem;
		}
	}
</style>
