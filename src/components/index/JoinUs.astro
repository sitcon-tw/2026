---
import { ExternalLink } from "@lucide/astro";
import { useTranslations, type Lang } from "@/utils/i18n";

interface Props {
	lang?: Lang;
}

const lang = Astro.props.lang ?? "zh";
const t = useTranslations(lang).joinUs;
---

<section id="sponsors">
	<div class="title">
		<h1 class="text-reveal-title">{t.title1}</h1>
		<h1 class="text-reveal-title">{t.title2}</h1>
	</div>
	<div class="content-container">
		<div class="content-text">
			<p class="text-reveal-paragraph" set:html={t.description} />
		</div>
		<div class="content-list">
			{t.stats.map((stat: string) => <p class="text-reveal-paragraph">{stat}</p>)}
		</div>
		<div class="content-btn">
			<a href="https://sitcon.org/2026/cfs/">
				<div class="hover-bg"></div>
				<span>
					<div>{t.buttons.sponsorRequest}</div>
					<ExternalLink class="arrow-icon" />
				</span>
			</a>

			<a href="https://sitcon.org/donate/">
				<div class="hover-bg"></div>
				<span>
					{t.buttons.personalSponsor}
					<ExternalLink class="arrow-icon" />
				</span>
			</a>
		</div>
	</div>
</section>

<style>
	section {
		background-color: white;
	}
	.title {
		font-size: 3rem;
		display: flex;
		justify-content: space-between;
		max-width: var(--max-width);
		margin: 0 auto;
		padding-top: 5rem;
		width: 90%;
		font-weight: 700;
	}

	.title h1 {
		color: #828282;
		font-weight: 700;
	}
	.title h1:nth-of-type(2) {
		color: #595959;
	}

	.content-container {
		width: 75rem;
		display: flex;
		flex-direction: column;
		margin: 0 auto;
	}

	.content-text {
		text-align: center;
		color: black;
		font-size: 1.2rem;
		font-weight: 500;
		margin: 5rem 10rem auto;
	}

	.content-list {
		color: black;
		font-weight: bold;
		margin: 5rem 12rem;
	}
	.content-btn {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 5rem;
	}
	.content-btn a {
		border-radius: 62.5rem;
		padding: 1rem 2rem;
		font-size: 1.5rem;
		display: flex;
		justify-content: center;
		align-items: center;
		cursor: pointer;
		text-decoration: none;
		font-weight: bold;
		color: #595959;
		background:
			linear-gradient(124deg, rgba(133, 138, 146, 0) -3.36%, rgba(133, 138, 146, 0.5) 31.33%, rgba(133, 138, 146, 0.75) 69.49%, rgba(133, 138, 146, 0.88) 96.26%, #858a92 98.2%),
			radial-gradient(390.63% 225.3% at 8.72% -121.17%, #fff 0%, rgba(255, 255, 255, 0) 100%);
		border: 0.0625rem solid #595959;
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
		overflow: hidden;
		position: relative;
		z-index: 1;
	}

	.hover-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background:
			linear-gradient(124deg, rgba(133, 138, 146, 0.1) -3.36%, rgba(133, 138, 146, 0.6) 31.33%, rgba(133, 138, 146, 0.8) 69.49%, rgba(133, 138, 146, 0.9) 96.26%, #7a7f87 98.2%),
			radial-gradient(390.63% 225.3% at 8.72% -121.17%, #fff 0%, rgba(255, 255, 255, 0) 100%);
		transform: translateX(-100%);
		z-index: -1;
	}

	.content-btn a span {
		display: flex;
		align-items: center;
		gap: 0.8rem;
	}

	.content-btn a:hover {
		transform: translateY(-0.1875rem);
		box-shadow: 0 0.5rem 1.25rem rgba(0, 0, 0, 0.1);
		border-color: #333333;
	}

	.content-btn a svg path {
		transition: stroke 0.3s ease;
	}

	@media screen and (max-width: 1250px) {
		.content-container {
			width: 100%;
			padding: 0 1.5rem;
			box-sizing: border-box;
		}

		.content-text {
			margin: 3rem auto;
			max-width: 90%;
		}

		.content-list {
			width: fit-content;
		}
	}

	@media screen and (max-width: 768px) {
		.title {
			flex-direction: column;
			padding: 3rem 2rem 0;
			font-size: 2rem;
			gap: 0.5rem;
			margin: 0 auto;
		}

		.title h1:nth-of-type(2) {
			display: flex;
			justify-content: flex-end;
		}

		.content-text {
			margin: 2rem auto;
			font-size: 1rem;
			text-align: left;
			line-height: 1.6;
		}

		.content-text br {
			display: none;
		}

		.content-list {
			font-size: 1rem;
			margin: 1rem auto 3rem auto;
		}

		.content-btn {
			flex-direction: row;
			gap: 0.8rem;
			align-items: center;
			width: 100%;
			padding: 0 1rem;
			box-sizing: border-box;
		}

		.content-btn a {
			width: auto;
			flex: 1;
			max-width: none;
			height: 3.2rem;
			font-size: 1rem;
			padding: 0;
		}

		.content-btn a svg {
			width: 1.25rem;
			height: 1.25rem;
		}
	}
</style>

<script>
	import { gsap } from "gsap";

	const buttons = document.querySelectorAll(".content-btn a");

	buttons.forEach(btn => {
		const content = btn.querySelector("span");
		const hoverBg = btn.querySelector(".hover-bg");

		btn.addEventListener("mouseenter", () => {
			gsap.killTweensOf([content, hoverBg]);

			// Text rolling effect
			gsap.to(content, {
				x: 20,
				opacity: 0,
				duration: 0.3,
				ease: "power2.in",
				onComplete: () => {
					gsap.set(content, { x: -20 });
					gsap.to(content, { x: 0, opacity: 1, duration: 0.3, ease: "power2.out" });
				}
			});

			// Background rolling effect
			gsap.fromTo(hoverBg, { x: "-100%" }, { x: "0%", duration: 0.5, ease: "power2.out" });
		});

		btn.addEventListener("mouseleave", () => {
			gsap.killTweensOf([content, hoverBg]);

			gsap.to(content, { x: 0, opacity: 1, duration: 0.3, ease: "power2.out" });

			gsap.to(hoverBg, {
				x: "100%",
				duration: 0.5,
				ease: "power2.in",
				onComplete: () => {
					gsap.set(hoverBg, { x: "-100%" });
				}
			});
		});
	});
</script>
