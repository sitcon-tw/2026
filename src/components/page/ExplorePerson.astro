---
import { Image } from "astro:assets";
const { name, position, avatar_url, social_link, ...rest } = Astro.props;
---

<div class="explore-item person-trigger" data-name={name} data-position={position} data-avatar={avatar_url} data-social={social_link} data-open-modal="member-info-modal" {...rest}>
	<Image src={avatar_url} alt={name} height={180} width={180} />
</div>

<style>
	.explore-item {
		position: relative;
		width: fit-content;
		border-radius: 62.5rem;
		background-color: #ac782b;
		margin: 2rem;
		cursor: pointer;
	}
</style>
