---
import zhHant from "@/i18n/zh-Hant.json";
import { Menu, X } from "@lucide/astro";

const navItems = [
	{ label: zhHant.nav.info, href: "/2026/info" },
	{ label: zhHant.nav.agenda, href: "/2026/agenda" },
	{ label: zhHant.nav.venue, href: "/2026/venue" },
	{ label: zhHant.nav.team, href: "/2026/team" }
];
---

<nav>
	<div class="nav-container">
		<div class="nav-logo-container">
			<a href="/2026/" id="logo" aria-label="SITCON 2026"><img id="logo-svg" src="/2026/img/SITCON-white.svg" alt="SITCON 2026" /></a>
			<h1 id="info">28 MARCH 2026<br />National Academy of Taiwan</h1>
			<button class="hamburger" aria-expanded="false">
				<Menu id="menu-icon" />
				<X id="x-icon" />
			</button>
		</div>
		<div class="nav-items-container">
			{
				navItems.map(item => (
					<a href={item.href} class="nav-item">
						{item.label}
					</a>
				))
			}
		</div>
	</div>
</nav>

<script>
	const menu = document.querySelector(".hamburger") as HTMLButtonElement;
	const navMenu = document.querySelector(".nav-container") as HTMLDivElement;

	menu.addEventListener("click", () => {
		const isExpanded = menu.getAttribute("aria-expanded") === "true";
		menu.setAttribute("aria-expanded", String(!isExpanded));
		menu.classList.toggle("active");
		navMenu.classList.toggle("active");
	});

	window.addEventListener("resize", () => {
		if (window.innerWidth > 850) {
			menu.setAttribute("aria-expanded", "false");
			menu.classList.remove("active");
			navMenu.classList.remove("active");
		}
	});
</script>

<style>
	nav {
		position: fixed;
		top: 2rem;
		left: 0;
		right: 0;
		z-index: 1000;
		padding: 0 2rem;
	}

	.nav-container {
		max-width: 1400px;
		margin: 0 auto;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.25rem;
	}

	.nav-items-container {
		display: flex;
		gap: 1rem;
	}

	.nav-item {
		background-color: #e8bb5f;
		color: #2b2e3a;
		padding: 1rem 2rem;
		border-radius: 999px;
		text-decoration: none;
		font-size: 1.25rem;
		font-weight: 600;
		transition: all 0.3s ease;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		text-align: center;
	}

	.nav-item:hover {
		background-color: #ffdc8a;
		transform: translateY(-3px);
		box-shadow: 0 4px 10px rgba(255, 209, 114, 0.3);
	}

	#logo-svg {
		height: 2.5rem;
		width: auto;
	}

	#logo {
		transition: all 0.3s ease;
	}

	#logo:hover {
		filter: drop-shadow(0px 5px 10px rgba(255, 209, 114, 0.7));
		scale: 1.02;
		transform: translateY(-3px);
	}

	.nav-logo-container {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		filter: drop-shadow(0px 5px 10px rgba(0, 0, 0, 0.3));
	}

	#info {
		font-size: 1rem;
		font-family: "JetBrainsMono", monospace;
	}

	.hamburger {
		display: none;
		background: none;
		border: none;
		cursor: pointer;
	}

	.nav-container.active .nav-items-container {
		background: #e8bb5f;
		display: grid;
		grid-template-columns: 1fr 1fr;
		width: 100%;
	}

	.nav-container.active {
		border-radius: 2rem;
	}

	.nav-container.active .nav-item {
		background-color: #ffdc8a;
		width: 100%;
		border-radius: 1rem;
		box-shadow: none;
	}

	#x-icon {
		display: none;
	}

	#menu-icon {
		display: block;
	}

	.nav-container.active #x-icon {
		display: block;
	}

	.nav-container.active #menu-icon {
		display: none;
	}

	@media (max-width: 1150px) {
		#info {
			display: none;
		}
	}

	@media (max-width: 850px) {
		.nav-container {
			background: #e8bb5f;
			padding: 1rem 2rem;
			border-radius: 10rem;
			filter: drop-shadow(0px 5px 10px rgba(0, 0, 0, 0.1));
			flex-direction: column;
		}

		.hamburger {
			display: block;
		}

		.nav-logo-container {
			filter: none;
			justify-content: space-between;
			width: 100%;
		}

		#logo-svg {
			filter: invert(1);
			height: 2rem;
		}

		.nav-items-container {
			gap: 1rem;
			border-radius: 5rem;
			display: none;
		}
	}
</style>
