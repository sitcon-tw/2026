					slider.style.width = `${tabRect.width}px`;
				}
			});
	}

	function cleanNonExistBookmarks() {
		let bookmarks = JSON.parse(window.localStorage.getItem("sitcon2026:agendaBookmarks") || "[]");
		const blocks = document.querySelectorAll(".session-block");
		let existsBookmarks = [];
		blocks.forEach(block => {
			const id = block.getAttribute("data-session-id");
			if (id) existsBookmarks.push(id);
		});

		bookmarks = bookmarks.filter(id => existsBookmarks.includes(id)) || [];
		window.localStorage.setItem("sitcon2026:agendaBookmarks", JSON.stringify(bookmarks));
	}

	function initMcpCopyBtn() {
		const btn = document.getElementById("mcp-copy-btn");
		if (!btn) return;

		btn.addEventListener("click", async () => {
			const url = btn.getAttribute("data-url");
			if (!url) return;

			try {
				await navigator.clipboard.writeText(url);
				const span = btn.querySelector(".btn-text");
				if (span) {
					const originalText = span.textContent;
					span.textContent = isEn ? "Copied!" : "Â∑≤Ë§áË£ΩÔºÅ";

					// Reset text after 2 seconds
					setTimeout(() => {
						span.textContent = originalText;
					}, 2000);
				}
			} catch (err) {
				console.error("Failed to copy:", err);
			}
		});
	}

	document.addEventListener("clearUrlCuratedState", clearUrlCuratedState);

	// Deep link on first load
	document.addEventListener("DOMContentLoaded", () => {
